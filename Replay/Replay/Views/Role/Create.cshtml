@model Replay.Models.Account.Role
@{
    ViewData["Title"] = "Rolle Erstellen";
    ViewData["Hero"] = "Rollenerstellung";
}

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<a class="btn btn-dark" asp-controller="Role" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Zurück zur Übersicht</a>
<br>
<br>
<div class="row">
    <div class="col-md-3">
        <form method="post">
            <hr>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Erstellen</button>
            </div>
        </form>
    </div>
</div>
