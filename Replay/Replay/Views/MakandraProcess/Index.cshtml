@model Replay.ViewModels.Process.MakandraProcessIndexViewModel

<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: Roboto;
            font-weight: 300;
        }

        h1 {
            font-family: Roboto;
            font-weight: 700;
        }

        * {
            box-shadow: none !important;
        }

        .form-check-input:checked {
            background-color: rgb(20, 18, 16);
            border-color: rgb(20, 18, 16);
        }

        .form-check-input {
            border-radius: 0.25em;
        }

        .alignright {
            text-align: right;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        tr {
            width: 100%;
        }
    </style>
</head>

@{
    ViewData["Title"] = "Prozessübersicht";
    ViewData["Hero"] = "Prozesse";
}

<a class="btn btn-dark btn-lg" asp-controller="MakandraProcess" asp-action="Create" role="button">+ Neuer Prozess</a>
<br>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                Prozesse
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.MakandraProcesses)
        {
            <tr>
                <td>
                    @p.Name
                </td>
                <td class="alignright">
                    <a class="btn btn-success btn-sm" asp-action="Details" asp-controller="MakandraProcess" role="button" asp-route-id="@p.Id"><i
                            class="bi bi-info-circle"></i> Details</a>
                    <a class="btn btn-warning btn-sm" asp-controller="MakandraProcess" asp-action="Edit" role="button" asp-route-id="@p.Id"><i
                            class="bi bi-pencil-square"></i> Bearbeiten</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="MakandraProcess" role="button" asp-route-id="@p.Id"><i class="bi bi-trash3"></i> Löschen</a>
                    <a id="StartButton" class="btn btn-dark btn-sm" asp-action="Start" asp-controller="MakandraProcess" role="button" asp-route-id="@p.Id"><i class="bi bi-play"></i> Vorgang starten</a>
                </td>
            </tr>
        }
    </tbody>
</table>