@using Replay.Views.Account
@model LoginModel
@{
    ViewData["Title"] = "Sign in";
    ViewData["Hero"] = "LOGIN";
}

<div class="row">
    <div class="col-md-3">
        <form asp-controller="Account" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post">
            <hr>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">E-Mail</label>
                <input asp-for="Input.Email" class="form-control">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Passwort</label>
                <input asp-for="Input.Password" type="password" class="form-control">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="login">Einloggen</button>
            </div>
        </form>
    </div>
</div>
