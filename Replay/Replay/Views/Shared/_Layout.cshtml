<!DOCTYPE html>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Replay</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Replay.styles.css" asp-append-version="true" />
    <style>

        body {
            font-family: Roboto !important;
            font-weight: 300;
        }

        h1 {
            font-family: Roboto !important;
            font-weight: 700 !important;
        }

        .line {
            background: rgb(255,8,68);
            background: linear-gradient(90deg, rgba(255,8,68,1) 0%, rgba(255,177,153,1) 100%);
            height: 10px;
        }

        .navbar {
            border-radius: 0px !important;
            padding-top: .1rem;
            padding-bottom: .1rem;
        }

        a.navbar-brand {
            color: white !important;
        }

        .navbar-nav li a {
            color: black !important;
        }

        .btn {
            color: white !important;
        }

        a.dropdown-item {
            color: white !important;
        }

        .dropdown-menu {
            background-color: white !important;
        }

        .nav-item > a:hover {

        }

        .dropdown-menu > a:hover {
            text-decoration: none !important;
            background-color: #ff456f !important;
        }

        img {
            max-width: 80%;
            max-height: 80%;
        }

        .hero-all {
            height: 130px;
            width: 100%;
            background: rgb(255,8,68);
            background: linear-gradient(90deg, rgba(255,8,68,1) 0%, rgba(255,177,153,1) 100%);
            margin-bottom: 50px;
        }
        .hero {
            height: 120px;
            width: 100%;
            background-color: black !important;
            margin-bottom: 50px !important;
        }
    </style>
</head>

<body>
    <header>
        <div class="hero-all">
        <div class="hero" style="color:white">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color:white;color:black;">
            <div class="container-fluid">
                    <a class="navbar-brand" style="margin-right: -3.0rem !important;margin-bottom: -0.5rem !important;" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/makandra_icon_long.png" alt="Sample Photo"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Prozesse
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="MakandraProcess" asp-action="Index">Index</a>
                                <a class="dropdown-item" asp-controller="MakandraProcess" asp-action="Create">Erstellen</a>
                                
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Meine Vorgänge
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="Procedure" asp-action="Index">Übersicht</a>
                                <a class="dropdown-item" asp-controller="Procedure" asp-action="ProcedureArchive">Archiv</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Procedure" asp-action="AdminIndex">Administrator-Übersicht</a>
                                <a class="dropdown-item" asp-controller="Procedure" asp-action="AdminArchive">Administrator-Archiv</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Aufgaben
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="MakandraTask" asp-action="Index">Meine Aufgaben</a>
                                <a class="dropdown-item" asp-area="" asp-controller="MakandraTask" asp-action="Archive">Erledigte Aufgaben</a>
                                <a class="dropdown-item" asp-area="" asp-controller="MakandraTask" asp-action="AllTasks">Alle Aufgaben</a>
                                <a class="dropdown-item" asp-area="" asp-controller="MakandraTask" asp-action="AllArchivedTasks">Alle erledigten Aufgaben</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Nutzer
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Index">Index</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Register">Erstellen</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Rollen
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="Role" asp-action="Index">Index</a>
                                <a class="dropdown-item" asp-controller="Role" asp-action="Create">Erstellen</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Berechtigungen
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="Permission" asp-action="Index">Index</a>
                                <a class="dropdown-item" asp-controller="Permission" asp-action="Create">Erstellen</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Aufgabenvorlagen
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="TaskTemplate" asp-action="Index">Index</a>
                                <a class="dropdown-item" asp-area="" asp-controller="TaskTemplate" asp-action="Create">Erstellen</a>
                                <a class="dropdown-item" asp-area="" asp-controller="TaskTemplate" asp-action="ArchivedTaskTemplatesIndex">Archiv</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="dropdownMenuButton" data-toggle="dropdown">
                                Fälligkeiten
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="Duedate" asp-action="Index">Index</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="btn" asp-area="" id="logout" asp-controller="Account" asp-action="Logout">Abmelden</a>
                        </li>
                    </ul>
                    
                </div>
                
            </div>
            </nav>
            <h1 class="display-8" style="padding-left: 1.325rem !important; position:relative !important; top: -5px !important;">
                @ViewData["Hero"]
            </h1>
        </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
