@model Replay.ViewModels.DuedateViewModels.DuedateCreateViewModel;

<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
        body {
            font-family: Roboto;
            font-weight: 300;
        }
        h1 {
            font-family: Roboto;
            font-weight: 700;
        }
        
</style>
</head>

@{
    ViewData["Title"] = "DuedateCreate";
    ViewData["Hero"] = "FÄLLIGKEITEN - ERSTELLEN";
}

<form method="post" asp-controller="Duedate" asp-action="Create">

    <h3>Name</h3>
    <hr>
    <div class="form-group">
        <input class="form-control" id="Name" asp-for ="Name" type="text">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <h3>Tage relativ zum Zieldatum</h3>
    <hr>
    <div class="form-group">
        <input type="text" class="form-control" id="days" step="1" asp-for="Days">
        <span asp-validation-for="Days" class="text-danger"></span>
    </div>

    @if(Model.Exists) {
        <div class="alert alert-warning" role="alert">
                Eine Fälligkeit mit dem selben Namen existiert bereits
        </div>
    }

    @if(Model.ParseError) {
        <div class="alert alert-warning" role="alert">
                Leider kam es zu einem Übersetzungfehler bei den Tagen
        </div>
    }

    <div class="d-flex justify-content-between">
        <div class="text-left">
            <a class="btn btn-primary" asp-controller="Duedate" asp-action="Index" role="button">Zurück</a>
        </div>
        <div class="form-group confirmbutton" class="text-right">
            <input type="submit" value="Bestätigen" class="btn btn-primary">
        </div>
    </div>

</form>